<h1>New news</h1>

<%= form_for @post do |f| %>
	
<%= f.fields_for :post_metum do |post_metum_form| %>
	<div class="form_control">
        <%= post_metum_form.label :title %>
        <%= post_metum_form.text_field :title%>
    </div>

	<div class="form_control">
        <%= post_metum_form.label :summary %>
        <%= post_metum_form.text_field :summary %>
    </div>

	<div class="form_control">
        <%= post_metum_form.label :body %>
        <%= post_metum_form.text_field :body %>
	</div>

    <div class="form_control">
        <%= post_metum_form.label :lang_id %>
        <%= post_metum_form.select(:lang_id) do %>
            <%= options_from_collection_for_select(Lang.all, :id, :name) %>
        <% end %>
    </div>
    
    <div class="form_control">
		<%= post_metum_form.submit 'Save' %>

    <% end %>

<% end %>