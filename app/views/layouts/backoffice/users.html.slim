doctype html
html
  head
    title SkyX
    = csrf_meta_tags
  
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload' 
  p.notice = notice 
  p.alert = alert
  body
    .site-content
      .row.bg-back-block
        .col-md-2
          .block-logo
            img height="auto" src="/assets/logo.png" width="100%"
        = render 'shared/home_top_lang'
        = render 'layouts/backoffice/home_top_menu'
        = render 'shared/home_top_user_menu'
              /button.btn Logout
              /button.btn = @user.user_login
      hr/
      = yield
      = debug(params) if Rails.env.development?