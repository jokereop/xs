<% provide(:title, t('sign_up_user')) %>
<h1><%=t('sign_up_user')%></h1>
<div class="container-fluid">
	
	<div class="row">
	  <div class="span6 offset3">
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>
	    <% end %>
	  </div>
	</div>

	<div class="row-fluid">
	  <div class="span6">
	    <%= form_for @user do |f| %>

	      <%= f.label :user_login %>
	      <%= f.text_field :user_login %>

	      <%= f.label :user_email %>
	      <%= f.text_field :user_email %>

	      <%= f.label :password %>
	      <%= f.password_field :password %>

	      <%= f.label :password_confirmation %>
	      <%= f.password_field :password_confirmation %>

	      <%= f.submit t("сreate_my_account"), class: "btn btn-large btn-primary" %>
	    <% end %>
	  </div>
  </div>
</div>
