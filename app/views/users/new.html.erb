<% provide(:title, t('sign_up_user')) %>
<h1><%=t('sign_up_user')%></h1>
<div class="container-fluid">
	
	<div class="row">
	  <div class="span6 offset3">
	    <%= form_for(@user) do |f| %>
	      <%= render 'shared/error_messages' %>
	    <% end %>
	  </div>
	</div>

	<div class="row-fluid">
	  <div class="span6">
	    <%= form_for @user do |f| %>

	  <p><%= f.label :user_login %></p>
	   <p><%= f.text_field :user_login %></p>

	  <p> <%= f.label :user_email %></p>
	   <p><%= f.text_field :user_email %></p>

	   <p><%= f.label :password %></p>
	   <p><%= f.password_field :password %></p>

	   <p><%= f.label :password_confirmation %></p>
	   <p><%= f.password_field :password_confirmation %></p>

	      <%= f.submit t("сreate_my_account"), class: "btn btn-large btn-primary" %>
	    <% end %>
	  </div>
  </div>
</div>
